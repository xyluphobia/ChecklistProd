<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChecklistProd.Views.HomePage"
             Title="Home">
    
    <Grid RowDefinitions="20, 20, *, 50"
          ColumnDefinitions="*"
          Margin="20, 20, 20, 20">
        
        <Label Grid.Row="0" Grid.Column="0"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ProgressBar Grid.Row="1" Grid.Column="0"
            x:Name="progressBarLevel"
            Progress="0"
            ProgressColor="Orange"
        ></ProgressBar>

        <ListView Grid.Row="2" Grid.Column="0"
            x:Name="listGoals" 
            BackgroundColor="Transparent"
            SeparatorColor="Aqua"
            RowHeight="60"
            
            ItemSelected="listGoals_ItemSelected"
            ItemTapped="listGoals_ItemTapped"
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Curly braces refer to an object -->
                    <TextCell Text="{Binding Task}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="3" Grid.Column="0"
            x:Name="btnAddGoals"
            Clicked="btnAddGoals_Clicked"
            Text="Add Goals">
        </Button>

    </Grid>
</ContentPage>
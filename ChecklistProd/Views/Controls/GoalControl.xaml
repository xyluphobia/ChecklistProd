<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChecklistProd.Views.Controls.GoalControl">

    <Grid RowDefinitions="auto, 50, *, 50" RowSpacing="5" Margin="10">
        
        <VerticalStackLayout Spacing="10" Margin="10" Grid.Row="0">
            <Frame Padding="10, 2, 10, 2">
                <HorizontalStackLayout>
                    <Label Text="Goal:" VerticalOptions="Center" WidthRequest="43"></Label>
                    <Entry x:Name="entryTask" VerticalOptions="Center" ClearButtonVisibility="WhileEditing" Keyboard="Chat" ReturnType="Done"></Entry>
                </HorizontalStackLayout>
            </Frame>

            <HorizontalStackLayout>
                <CheckBox x:Name="chkboxSetPriority" VerticalOptions="Center"/>
                <Label Text="Priority goal on hard days" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Button x:Name="btnPushEdit"
                Text="Save" 
                Clicked="btnPushEdit_Clicked"/>
        </VerticalStackLayout>


        <Button x:Name="btnCancelEditGoals" Grid.Row="3"
            Clicked="btnCancelEditGoals_Clicked"
            Text="Cancel"/>

    </Grid>
</ContentView>
